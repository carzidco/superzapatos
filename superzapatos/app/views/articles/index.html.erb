<h2>Listing articles</h2>

<% if Store.count > 0 %>
<table>
  <tr>
  </tr>
<% if Article.count > 0 %>

<% @articles.each do |article| %>
  <tr>
    <td><%= link_to article.name, article %></td>
    <td><%= link_to image_tag("edit.gif", :border=>0, :class => 'edit'), edit_article_path(article) %></td>
    <td><%= link_to image_tag("delete.gif", :border=>0, :class => 'delete'), article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
<br />
<%= link_to 'New Article', new_article_path %>
<% else %>
	No Articles Found. Be the first to add <%= link_to 'new Article', new_article_path %>
<% end %>

<% else %>
    You can't add articles if  you don't have stores, <br />
    go ahead and <strong><%= link_to 'add a store', new_store_path %></strong>
<% end %>
<% if Store.count == 0 %>
        
<% end %>

